<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<context:component-scan base-package="egovframework">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Service"/>
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
	</context:component-scan>
	
	<!--  admin inquire Log Aspect -->
	<!--  관리자 회원 조회, 수정, 삭제등의 로그  / context-admininquirelogaop.xml 로 등록을 했으나 컨트롤러가 대상이라 여기에 선언. -->
	<bean id="adminInquireLog" class="egovframework.com.asapro.statistics.service.AdminInquireLogAspect" />
	<aop:config>
		<aop:aspect ref="adminInquireLog">
			<aop:pointcut id="adminMemberControllerMethod" expression="execution(public * egovframework.com.asapro..web.AdminMemberController.*(..))
			&amp;&amp; ! execution(public * egovframework.com..web.AdminMemberController.*Passwor*(..))
			&amp;&amp; ! execution(public * egovframework.com..web.AdminMemberController.*Profile*(..))
			&amp;&amp; ! execution(public * egovframework.com..web.AdminMemberController.*SearchLayer*(..))
			&amp;&amp; ! execution(public * egovframework.com..web.AdminMemberController.check*(..)) " />
			<aop:after-returning method="afterAdminInquire" pointcut-ref="adminMemberControllerMethod" />
		</aop:aspect>
	</aop:config>
	<!--  user inquire Log Aspect -->
	<!--  사용자 개인정보 조회, 수정, 삭제등의 로그  / 컨트롤러가 대상이라 여기에 선언. -->
	<bean id="userInquireLog" class="egovframework.com.asapro.statistics.service.UserInquireLogAspect" />
	<aop:config>
		<aop:aspect ref="userInquireLog">
			<aop:pointcut id="userMemberControllerMethod" expression="execution(public * egovframework.com.asapro..web.*AdminController.*(..))
			&amp;&amp; ! execution(public * egovframework.com.asapro..web.ApiAdminController.*(..))
			&amp;&amp; ! execution(public * egovframework.com.asapro..web.MyPageAdminController.*(..))" />
			<aop:after-returning method="afterUserInquire" pointcut-ref="userMemberControllerMethod" />
		</aop:aspect>
	</aop:config>
	
	
    <!-- //TODO-JANG 오픈시 삭제 -->
    <!-- setting Locale Locale Interceptor 설정하기  -->    
    <bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor"
        p:paramName="lang" />

    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver" />

    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping">
    	<!-- servlet mapping  REST 타입으로 사용하기우해 Fullpath 를 true로-->
    	<property name="alwaysUseFullPath" value="true" />
    	<property name="order" value="0" />
        <property name="interceptors">
            <list>
                <ref bean="localeChangeInterceptor"/>
            </list>
        </property>
    </bean>
    
	<!-- For Pagination Tag -->
	<!-- <bean id="imageRenderer" class="egovframework.com.cmm.ImagePaginationRenderer"/>

	<bean id="paginationManager" class="egovframework.rte.ptl.mvc.tags.ui.pagination.DefaultPaginationManager">
		<property name="rendererType">
			<map>
				<entry key="image" value-ref="imageRenderer"/>
			</map>
		</property>
	</bean> -->

    <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerAdapter">
        <property name="webBindingInitializer">
            <bean class="egovframework.com.cmm.web.EgovBindingInitializer"/>
        </property>
        <!-- 커스텀 어노테이션 //@currentSite, @currentAdmin, @currentUser, @currentMenu -->
        <property name="customArgumentResolvers">
        	<list>
        		<bean class="egovframework.com.asapro.support.CustomHandlerMethodArgumentResolver" />
        	</list>
        </property>
        
        <!-- json converter  // @ResponseBody, @RequestBody 사용, 매핑위해 -->
		<property name="messageConverters"> 
			<list> 
				<!-- <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter" />  -->
				<bean class="org.springframework.http.converter.json.GsonHttpMessageConverter" /> 
				<bean class="org.springframework.http.converter.ByteArrayHttpMessageConverter" />
			</list> 
		</property>
    </bean>
    
    <!--  //TODO-JANG 임시삭제오픈때 살리기  <bean class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"/> -->

    <!-- IP 정보 기록 및 로그인 체크가 필요한 URL과 로그인 여부를 체크해줄 인터셉터를 등록한다. -->
    <!-- 분리 -->
    
    
    <!-- 익셉션별 에러페이지 적용  -> 추후 생성한 익셉션과 기본 분리될 익셉션을 구분하여 에러페이지 새로적용.  현제는 디폴트만 처리 -->
	<bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<property name="defaultErrorView" value="asapro/common/error"/>
		<property name="exceptionMappings">
			<props>
				<prop key="org.springframework.dao.DataAccessException">asapro/common/error</prop>
				<prop key="org.springframework.transaction.TransactionException">asapro/common/error</prop>
				<prop key="egovframework.rte.fdl.cmmn.exception.EgovBizException">asapro/common/error</prop>
				<prop key="org.springframework.web.HttpSessionRequiredException">asapro/common/error</prop>
				<prop key="egovframework.com.cmm.exception.EgovXssException">asapro/common/error</prop>
			</props>
		</property>
	</bean>

	<!-- for JFile -->
	<bean class="org.springframework.web.servlet.view.BeanNameViewResolver" p:order="0"/>

	<bean class="org.springframework.web.servlet.view.UrlBasedViewResolver" 
		  p:order="1"
		  p:viewClass="org.springframework.web.servlet.view.JstlView"
		  p:prefix="/WEB-INF/jsp/egovframework/com/" 
		  p:suffix=".jsp"
		  p:contentType="text/html;charset=UTF-8"/>
		  
	<bean id="jsonView" class="org.springframework.web.servlet.view.json.MappingJackson2JsonView">
		<property name="contentType" value="text/html;charset=UTF-8"/>
	</bean>

</beans>

<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xmlns="http://java.sun.com/xml/ns/javaee" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
		id="AsaProX" version="3.0">  	
		
  	<display-name>AsaProX</display-name>
  	<security-constraint>
	    <web-resource-collection>
	        <web-resource-name>Restricted HTTP methods.</web-resource-name>
	        <url-pattern>/*</url-pattern>
	        <http-method>PUT</http-method>
	        <http-method>DELETE</http-method>
	        <http-method>TRACE</http-method>
	        <http-method>OPTIONS</http-method>
	        <http-method>HEAD</http-method>
	        <http-method>CONNECT</http-method>
	        <!-- You can specify multiple HTTP methods here. -->
	    </web-resource-collection>
	    <auth-constraint />
	</security-constraint>
	
	
	
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
        	<http-only>true</http-only>
        	<!-- <secure>true</secure> -->
        </cookie-config>
    </session-config>

	<error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/egovframework/com/asapro/common/error.jsp</location>
    </error-page>
    <error-page>
      <error-code>400</error-code>
      <location>/WEB-INF/jsp/egovframework/com/asapro/common/error.jsp</location>
    </error-page>
    <error-page>
      <error-code>401</error-code>
      <location>/WEB-INF/jsp/egovframework/com/asapro/common/error.jsp</location>
    </error-page>
    <error-page>
      <error-code>404</error-code>
      <location>/WEB-INF/jsp/egovframework/com/asapro/common/error.jsp</location>
    </error-page>
    <error-page>
      <error-code>500</error-code>
      <location>/WEB-INF/jsp/egovframework/com/asapro/common/error.jsp</location>
    </error-page>
	
	<distributable/>
</web-app>